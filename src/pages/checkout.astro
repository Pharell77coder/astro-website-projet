---
import MainLayout from '../layouts/MainLayout.astro';

// Simuler des options de livraison et paiement
const shippingMethods = [
  { id: 1, name: "Livraison standard", price: 5 },
  { id: 2, name: "Livraison express", price: 10 }
];
const paymentMethods = [
  { id: 1, name: "Carte de crédit" },
  { id: 2, name: "PayPal" }
];
---

<MainLayout>
  <h1>Finaliser votre commande</h1>

  <!-- Section de résumé du panier -->
  <div id="cart-summary">
    <h2>Résumé de votre panier</h2>
    <div id="cart-items"></div>
    <p id="empty-message" style="display: none;">Votre panier est vide.</p>
    <p id="total-price">Total: 0 €</p>
  </div>

  <!-- Formulaire de livraison et paiement -->
  <form id="checkout-form">
    <h2>Informations de livraison</h2>
    <label for="name">Nom complet:</label>
    <input type="text" id="name" name="name" required />

    <label for="address">Adresse de livraison:</label>
    <input type="text" id="address" name="address" required />

    <h2>Options de livraison</h2>


    <h2>Mode de paiement</h2>


    <button type="submit">Valider la commande</button>
  </form>

  <style>
    form {
      margin-top: 2rem;
    }
    form label {
      display: block;
      margin: 1rem 0 0.5rem;
    }
    form input[type="text"], form input[type="radio"] {
      margin-bottom: 1rem;
    }
    form button {
      background-color: green;
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      cursor: pointer;
    }
    form button:hover {
      background-color: darkgreen;
    }
    #cart-items {
      margin-bottom: 1.5rem;
    }
    .cart-item {
      margin-bottom: 0.5rem;
    }
  </style>
</MainLayout>
