---
interface Props {
	language?: string;
	title?: string;
}

const { 
	language = "fr",
	title = "title" 
} = Astro.props;
---

<!DOCTYPE html>
<html lang={language}>

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<title>{title}</title>
</head>

<body>
	<slot />
</body>

</html>
